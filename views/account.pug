extends layout

block content
    .inner
        h2 Edit Account
        form(action=`/account` method="POST")
            label(for="name") Name
            input(type="text" id = "name" name="name" value = (user && user.name) required)
            label(for="email") Email Address
            input(type="text" id = "email" name="email" value = (user && user.email) required)
            input(type="submit" value="Edit Account" class="button")